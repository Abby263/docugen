# ============================================
# DocuGen AI - Environment Configuration
# ============================================
# Copy this file to .env and fill in your actual values
# cp .env.example .env

# ============================================
# LLM Configuration
# ============================================
# Default LLM Provider (openai, anthropic, deepseek, zhipu, qwen, azure_openai, ollama)
DEFAULT_LLM_PROVIDER=openai
DEFAULT_LLM_MODEL=gpt-4o-mini

# Generic LLM Configuration (used as fallback)
LLM_API_KEY=
LLM_BASE_URL=
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4000

# OpenAI Configuration
OPENAI_API_KEY=sk-...

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=
AZURE_DEPLOYMENT=
AZURE_API_VERSION=2025-02-15-preview

# Anthropic Configuration
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-20251022

# DeepSeek Configuration
DEEPSEEK_API_KEY=
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat

# Zhipu AI Configuration
ZHIPU_API_KEY=

# Qwen/DashScope Configuration
DASHSCOPE_API_KEY=
QWEN_API_KEY=

# Ollama Configuration (local, no API key needed)
# OLLAMA_BASE_URL=http://localhost:11434/v1
# OLLAMA_MODEL=llama3

# ============================================
# Search API Configuration (Optional)
# ============================================
PERPLEXITY_API_KEY=
BING_API_KEY=

# ============================================
# Backend Configuration
# ============================================
# Application Settings
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Security
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-min-32-chars-change-this-in-production

# Database
# SQLite (development)
DATABASE_URL=sqlite:///./docugen_saas.db

# PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@localhost:5432/docugen_saas

# Redis (for task queue and caching)
REDIS_URL=redis://localhost:6379/0

# File Storage
UPLOAD_DIR=./storage/uploads
OUTPUT_DIR=./storage/outputs
MAX_FILE_SIZE=52428800

# CORS Configuration (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# ============================================
# Authentication - Clerk
# ============================================
# Frontend (Vite environment variable)
# VITE_CLERK_PUBLISHABLE_KEY=pk_test_...

# Backend
CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...

# ============================================
# Email Configuration (Optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@docugen.ai

# ============================================
# Payment - Stripe (Optional)
# ============================================
STRIPE_API_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ============================================
# Monitoring - LangFuse (Optional)
# ============================================
LANGFUSE_PUBLIC_KEY=pk-...
LANGFUSE_SECRET_KEY=sk-...
LANGFUSE_HOST=https://cloud.langfuse.com
# Alternative: LANGFUSE_BASE_URL=https://cloud.langfuse.com

# ============================================
# DeepSearch Configuration (Optional)
# ============================================
BROWSER_HEADLESS=true
DEEPSEARCH_SEARCH_ENGINE=duckduckgo
DEEPSEARCH_TOPK=5
DEEPSEARCH_SHOTS_DIR=./results/shots
DEEPSEARCH_BROWSER_TIMEOUT=30000
DEEPSEARCH_PAGE_WAIT_TIME=3000

# ============================================
# Subscription Tiers (Optional - defaults in code)
# ============================================
# FREE_TIER_LIMIT=5
# PRO_TIER_LIMIT=50
# ENTERPRISE_TIER_LIMIT=-1

# ============================================
# Feature Flags (Optional)
# ============================================
# ENABLE_ANALYTICS=true
# ENABLE_NOTIFICATIONS=true
# ENABLE_WEBHOOKS=true
